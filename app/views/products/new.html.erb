<h1>New Product</h1>

<%#= @product.errors.full_messages.join(", ") %>
<% if @product.errors.any? %>
  <ul>
    <% @product.errors.full_messages.each do |msg|  %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @product do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.collection_check_boxes :category_ids, Category.order(:name),
                                   :id, :name %>
  </div>
  <%= f.submit %>
<% end %>
